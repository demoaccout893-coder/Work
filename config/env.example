# Arbitrage Tracker Pro - Environment Configuration
# Copy this file to backend/.env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite (default - simple, no setup required)
DATABASE_URL=sqlite:///./arbitrage_tracker.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage_tracker

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/arbitrage_tracker

# ============================================
# API SERVER CONFIGURATION
# ============================================

# Server host (0.0.0.0 = accessible from network)
API_HOST=0.0.0.0

# Server port
API_PORT=8000

# ============================================
# APPLICATION SETTINGS
# ============================================

# Debug mode (true for development, false for production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# EXCHANGE API KEYS
# ============================================

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Kraken
KRAKEN_API_KEY=https://docs.kraken.com/rest/
KRAKEN_API_SECRET=your_kraken_api_secret

# Coinbase
COINBASE_API_KEY=https://docs.cdp.coinbase.com/coinbase-app/advanced-trade-apis/overview
COINBASE_API_SECRET=your_coinbase_api_secret

# Bybit
BYBIT_API_KEY=https://bybit-exchange.github.io/docs/
BYBIT_API_SECRET=your_bybit_api_secret

# KuCoin
KUCOIN_API_KEY=https://docs.kucoin.com/
KUCOIN_API_SECRET=your_kucoin_api_secret

# OKX
OKX_API_KEY=https://www.okx.com/docs-en/
OKX_API_SECRET=your_okx_api_secret

# Gate.io
GATEIO_API_KEY=your_gateio_api_key
GATEIO_API_SECRET=your_gateio_api_secret

# MEXC
MEXC_API_KEY=https://www.gate.io/docs/apiv4/en/
MEXC_API_SECRET=your_mexc_api_secret

# ============================================
# TRADING CONFIGURATION
# ============================================

# Minimum profit threshold (%)
MIN_PROFIT_THRESHOLD=0.5

# Maximum slippage (%)
MAX_SLIPPAGE=0.1

# Order timeout (seconds)
ORDER_TIMEOUT=30

# ============================================
# RISK MANAGEMENT
# ============================================

# Maximum daily loss ($)
MAX_DAILY_LOSS=5000

# Maximum open exposure ($)
MAX_OPEN_EXPOSURE=100000

# Maximum position size ($)
MAX_POSITION_SIZE=10000

# Maximum number of concurrent trades
MAX_CONCURRENT_TRADES=5

# ============================================
# AI/ML SETTINGS
# ============================================

# AI model path
AI_MODEL_PATH=./models/trade_filter_model.pkl

# Minimum AI confidence score (0-1)
MIN_AI_CONFIDENCE=0.7

# AI update frequency (hours)
AI_UPDATE_FREQUENCY=24

# ============================================
# MONITORING & ALERTS
# ============================================

# Enable email alerts
ENABLE_EMAIL_ALERTS=true

# Email for alerts
ALERT_EMAIL=crypto.trading.pk.com@gmail.com

# SMTP server
SMTP_SERVER=smtp.gmail.com

# SMTP port
SMTP_PORT=465

# SMTP username
SMTP_USERNAME=crypto.trading.pk.com@gmail.com

# SMTP password
SMTP_PASSWORD=uqrn jdyd cnwc zwbs

# ============================================
# WEBHOOK CONFIGURATION
# ============================================

# Enable webhooks
ENABLE_WEBHOOKS=false

# Webhook URL for trade notifications
WEBHOOK_URL=https://your-webhook-url.com/trades

# Webhook secret for verification
WEBHOOK_SECRET=your_webhook_secret

# ============================================
# CACHE SETTINGS
# ============================================

# Redis URL (optional, for caching)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL (seconds)
CACHE_TTL=300

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Number of worker threads
WORKER_THREADS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Connection pool size
CONNECTION_POOL_SIZE=20

# ============================================
# SECURITY
# ============================================

# JWT secret key (change this!)
JWT_SECRET=your_super_secret_jwt_key_change_this

# API rate limit (requests per minute)
RATE_LIMIT=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# BACKUP & RECOVERY
# ============================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup frequency (hours)
BACKUP_FREQUENCY=24

# Backup directory
BACKUP_DIR=./backups

# Keep backups for (days)
BACKUP_RETENTION_DAYS=30

# ============================================
# ADVANCED SETTINGS
# ============================================

# Enable dry run mode (simulate trades without executing)
DRY_RUN=false

# Price update frequency (seconds)
PRICE_UPDATE_FREQUENCY=1

# Opportunity scan frequency (seconds)
OPPORTUNITY_SCAN_FREQUENCY=5

# Trade history retention (days)
TRADE_HISTORY_RETENTION=90

# ============================================
# DEPLOYMENT
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application name
APP_NAME=Arbitrage Tracker Pro

# Application version
APP_VERSION=1.0.0
